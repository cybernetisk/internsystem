# http://editorconfig.org
root = true

# Never not unix, final_newline, utf8.
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# PEP8 for Python.
[**.py]
indent_style = space
indent_size = 4

# Scripts
[**.sh]
indent_style = space
indent_size = 2

# Data files
[**.json,**.html]
indent_size = 2

# Deploy/Build
[{.travis.yml}]
indent_style = space
indent_size = 2
